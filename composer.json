{
    "name": "abr4xas/enlamano",
    "description": "EnLaMano",
    "keywords": [
        "abr4xas",
        "enlamano"
    ],
    "homepage": "https://github.com/abr4xas/enlamano",
    "license": "MIT",
    "authors": [
        {
            "name": "angel cruz",
            "email": "bullgram@gmail.com",
            "homepage": "https://angelcruz.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Abr4xas\\EnLaMano\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abr4xas\\EnLaMano\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Abr4xas\\EnLaMano\\EnLaManoServiceProvider"
            ],
            "aliases": {
                "EnLaMano": "Abr4xas\\EnLaMano\\EnLaManoFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
